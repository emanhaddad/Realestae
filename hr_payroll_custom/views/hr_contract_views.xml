<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record model="ir.ui.view" id="salary_exception_tree">
            <field name="name">hr.salary.exception.tree</field>
            <field name="model">hr.salary.exception</field>
            <field name="arch" type="xml">
                <tree string="Salary exception">
                    <!-- <field name="name"/> -->
                    <field name="employee_id"/>
                    <field name="salary_rule_id"/>
                    <field name="exception_type"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="amount" sum="Total"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="salary_exception_form">
            <field name="name">hr.salary.exception.form</field>
            <field name="model">hr.salary.exception</field>
            <field name="arch" type="xml">
                <form string="Salary exception">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" attrs="{'invisible':[('name','=','New')]}" /></h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id" options='{"no_create":True}'/>
                                <field name="contract_id" domain="[('state','=','open'),('employee_id','=',employee_id)]"/>
                                <field name="salary_rule_id" options='{"no_create":True,"no_open":True}'/>
                            </group>
                            <group>
                                <field name="date_from"/>
                                <field name="date_to"/>                                
                                <field name="exception_type"/>
                                <field name="amount" attrs="{'invisible':[('exception_type','=','exclude')]}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <record id="salary_exception_action" model="ir.actions.act_window">
            <field name="name">Salary exception</field>
            <field name="res_model">hr.salary.exception</field>
            <field name="view_mode">tree,form</field>
        </record>

    <menuitem
            id="allow_deduct_exception_root"
            name="Payroll Operations"
            parent="hr_work_entry_contract.menu_hr_payroll_root"
            sequence="51" />

        <menuitem id="salary_exception_menu"
            name="Salary exception"
            parent="allow_deduct_exception_root"
            action="salary_exception_action"
            sequence="10"/>

        <record id="view_hr_payslip_form" model="ir.ui.view">
            <field name="name">hr.salary.form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[1]" position="after">
                <page string="Salary Exception">
                    <field name="salary_exception_ids" colspan="2" nolabel="1" readonly="True">
                        <tree string="Exception">
                            <field name="salary_rule_id"/>
                            <field name="amount"/>
                        </tree>
                    </field>
                </page>
            </xpath>        
            </field>
        </record>

</odoo>
