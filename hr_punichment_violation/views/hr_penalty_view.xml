                <form string="Penalty">
                    <sheet>
                        <group>
                            <group>
                                <field name="violation_id"/>
                                <field name="salary_rule_id" domain="[('special', '=', True)]"/>
                            </group>
                            <group>
                                <field name="violation_category"/>
                                <field name="amount_type" required="1"/>
                                <field name="salary_rule_ids" widget="many2many_tags" attrs="{'invisible' : [('amount_type', '!=', 'percent')]}"/>
                            </group>
                            </group>
