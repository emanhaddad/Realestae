                    </sheet>
                </form>
            </field>
        </record>               
               

        <record id="view_hr_penalty_tree" model="ir.ui.view">
            <field name="name">hr.penalty.tree</field>
            <field name="model">hr.penalty</field>
            <field name="arch" type="xml">
                <tree string="Penalty">
                    <field name="violation_id"/>
                    <field name="violation_category"/>
                    <field name="amount_type"/>
                </tree>   
            </field>
        </record>

        <record id="hr_penalty_action" model="ir.actions.act_window">
            <field name="name">Penalty</field>
            <field name="res_model">hr.penalty</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_violation_punichment_menu" name="Violation and Punichment" sequence="10"/>
        <menuitem id="hr_violation_punichment_config_menu" parent="hr_violation_punichment_menu" name="Configration" sequence="10"/>
        <menuitem id="hr_penalty_menu" name="Penalty" parent="hr_violation_punichment_config_menu" sequence="20" action="hr_penalty_action"/>
    </data>
