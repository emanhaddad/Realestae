<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="real_estates_form_inherits">
        <field name="name">real.estate.form (in real_estates_expenses)</field>
        <field name="model">real.estate</field>
        <field name="inherit_id" ref="real_estate.real_estates_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button class="oe_stat_button" type="object"
                        name="action_view_expenses" icon="fa-th-list"
                        context="{'default_property_id': id}">
                    <div class="o_stat_info">
                        <field name="expenses_count" class="o_stat_value"/>
                        <span class="o_stat_text">Expenses</span>
                    </div>
                </button>
            </div>
            
        </field>
    </record>

    <record model="ir.ui.view" id="units_real_estate_form_inherits">
        <field name="name">real.estate.units.form (in real_estates_expenses</field>
        <field name="model">real.estate.units</field>
        <field name="inherit_id" ref="real_estate.units_real_estate_form"/>
        <field name="arch" type="xml">

            <div class="oe_button_box" position="inside">
                <button class="oe_stat_button" type="object"
                        name="action_view_expenses" icon="fa-th-list"
                        context="{'default_property_id': id}">
                    <div class="o_stat_info">
                        <field name="expenses_count" class="o_stat_value"/>
                        <span class="o_stat_text">Expenses</span>
                    </div>
                </button>
            </div>
        </field>
    </record>

</odoo>
