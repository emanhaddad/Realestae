<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="construction_contract.receipt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div style="width:100%; margin: 0 auto;"> <!-- page start-->
                            <div class="text-center arabic" style="font-family: 'Times New Roman', Times, serif;">
                                <h1 style="text-align:center; font-size:25px;font-weight:bold;border:solid 2px black;border-radius: 30px;padding: 10px 30px 10px 30px;margin-left:15%;margin-right:15%;display:inline-block;">مستخلص أعمال إنشائية بالمشاريع</h1>
                            </div>

                            <br/>

                            <div class="text-right arabic" style="font-family: 'Times New Roman', Times, serif;">
                                <ul class="row">
                                    <div class="col-4" style="direction:rtl;">
                                        <strong style="font-weight:bold;font-size:20px;">الرقم:</strong> &#160;<span style="font-size:20px;margin-left:90px;" t-field="o.name"/>
                                    </div>
                                    <div class="col-4" style="direction:rtl;">
                                        <strong style="font-weight:bold;font-size:20px;">التاريخ:</strong> &#160;<span style="font-size:20px;margin-left:50px;" t-field="o.date_receipt"/>
                                    </div>
                                </ul>
                            </div>

                            <br/>
                            <br/>

                            <div class="text-center arabic">
                                <strong style="text-align: center; font-family: 'Times New Roman', Times, serif; font-weight: bold; border: solid 2px gray; border-radius: 30px;padding: 10px 30px 10px 30px; font-size: 20px;background-color: #f2f2f2;">بيانات المقاول</strong> 
                            </div>

                            <br/>

                            <table style="font-size:20px;font-family: 'Times New Roman', Times, serif;border-collapse: collapse; width: 100%;" class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>المشروع</th>
                                        <th>تاريخ العقد</th>
                                        <th>نوع العقد</th>
                                        <th>العقد</th>
                                        <th>الاسم</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="docs" t-as="o">
                                        <td>
                                            <span t-field="o.project_id"/>
                                        </td>
                                        <td>
                                            <span t-field="o.date_contract"/>
                                        </td>
                                        <td>
                                            <span t-field="o.contract_id"/>
                                        </td>
                                        <td>
                                            <span t-field="o.partner_id"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <br/>
                            <br/>

                            <div class="text-center arabic">
                                <strong style="text-align: center; font-family: 'Times New Roman', Times, serif; font-weight: bold; border: solid 2px gray; border-radius: 30px;padding: 10px 30px 10px 30px; font-size: 20px;background-color: #f2f2f2;">بيانات مرحلة العقد</strong> 
                            </div>

                            <br/>

                            <table style="font-size:20px;font-family: 'Times New Roman', Times, serif;border-collapse: collapse; width: 100%;" class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>المبلغ</th>
                                        <th>عدد الأمتار/ الوحدات</th>
                                        <th>النسبة</th>
                                        <th>تاريخ النهاية</th>
                                        <th>تاريخ البداية</th>
                                        <th>اسم المرحلة</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="docs" t-as="o">
                                        <td>
                                            <span t-field="o.stage_amount"/>
                                        </td>
                                        <td>
                                            <span t-field="o.unit"/>
                                        </td>
                                        <td>
                                            <span t-field="o.percent"/>
                                        </td>
                                        <td>
                                            <span t-field="o.date_end"/>
                                        </td>
                                        <td>
                                            <span t-field="o.date_start"/>
                                        </td>
                                        <td>
                                            <span t-field="o.contract_stage_id"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <br/>
                            <br/>

                            <div class="text-center arabic">
                                <strong style="text-align: center; font-family: 'Times New Roman', Times, serif; font-weight: bold; border: solid 2px gray; border-radius: 30px;padding: 10px 30px 10px 30px; font-size: 20px;background-color: #f2f2f2;">بيانات الدفعة</strong> 
                            </div>

                            <br/>

                            <table style="font-size:20px;font-family: 'Times New Roman', Times, serif;border-collapse: collapse; width: 100%;" class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>القيمة الإجمالية</th>
                                        <th>عدد الأمتار/ الوحدات المنجزة</th>
                                        <th>نسبة الإنجاز</th>
                                        <th>معدل الإنجاز</th>
                                        <th>اسم المرحلة</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="docs" t-as="o">
                                        <td>
                                            <span t-field="o.payment_amount"/>
                                        </td>
                                        <td>
                                            <span t-field="o.actual_unit"/>
                                        </td>
                                        <td>
                                            <span t-field="o.actual_progress"/>
                                        </td>
                                        <td>
                                            <span t-field="o.progress"/>
                                        </td>
                                        <td>
                                            <span t-field="o.contract_stage_id"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <br/>
                            <br/>


                            <div class="row">
                                <div class="col-3" style="font-family: 'Times New Roman', Times, serif; border: solid 2px gray; border-radius: 20px; font-size: 19px;">
                                    <div class="text-center">
                                        <strong>المدير العام</strong>
                                        <br/><br/><br/>
                                    </div>
                                </div>

                                <div class="col-3" style="font-family: 'Times New Roman', Times, serif; border: solid 2px gray; border-radius: 20px; font-size: 19px;">
                                    <div class="text-center">
                                        <strong>الإدارة المالية</strong>
                                        <br/><br/><br/>
                                    </div>
                                </div>

                                <div class="col-3" style="font-family: 'Times New Roman', Times, serif; border: solid 2px gray; border-radius: 20px; font-size: 19px;">
                                    <div class="text-center">
                                        <strong>مدير المشاريع</strong>
                                        <br/><br/><br/>
                                    </div>
                                </div>

                                <div class="col-3" style="font-family: 'Times New Roman', Times, serif; border: solid 2px gray; border-radius: 20px; font-size: 19px;">
                                    <div class="text-center">
                                        <strong>مهندس المشروع</strong>
                                        <br/><br/><br/>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
