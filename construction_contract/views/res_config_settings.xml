<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="construction_contract_settings_form" model="ir.ui.view">
        <field name="name">Construction Contract Settings Form View</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="construction_management_app.project_construction_settings_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='construction_main']" position="inside">

                <div class="col-12 col-lg-6 o_setting_box"
                     id="construction_ceo"
                     title="CEO User to be used in construction approvals flows.">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Approvals Flow</span>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                        <div class="text-muted">
                            Select default users in construction approval flows.
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label string="CEO User" for="ceo_user_id" class="col-lg-3 o_light_label"/>
                                <field name="ceo_user_id"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box" id="construction_receipt_main">
                    <label for="construction_receipt_body"/>
                    <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                          aria-label="Values set here are company-specific." groups="base.group_multi_company"
                          role="img"/>
                    <div class="text-muted">
                        Use default receipt body text in printed templates.
                    </div>
                    <div class="content-group">
                        <field name="construction_receipt_body" widget="html"/>
                    </div>
                </div>
        </xpath>
    </field>
</record>
        </odoo>