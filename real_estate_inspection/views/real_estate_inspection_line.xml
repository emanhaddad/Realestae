<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record model="ir.ui.view" id="real_estate_inspection_line_form_view">
        <field name="name">real.estate.inspection.line.form (in real_estate_inspection)</field>
        <field name="model">real.estate.inspection.line</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="inspection_id" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="inspection_item_id"/>
                        </h2>
                    </div>
                    <group>
                        <field name="result"/>
                        <field name="status_percentage"/>
                        <field name="state"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="real_estate_inspection_line_search_view">
        <field name="name">real.estate.inspection.line.search (in real_estate_inspection)</field>
        <field name="model">real.estate.inspection.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="inspection_id"/>
                <field name="inspection_item_id"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="real_estate_inspection_line_tree_view">
        <field name="name">real.estate.inspection.line.tree (in real_estate_inspection)</field>
        <field name="model">real.estate.inspection.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="inspection_id"/>
                <field name="inspection_item_id"/>
                <field name="status_percentage"/>
                <field name="result"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model='ir.ui.view' id='real_estate_inspection_line_pivot_view'>
        <field name="name">real.estate.inspection.line.pivot (in real_estate_inspection)</field>
        <field name="model">real.estate.inspection.line</field>
        <field name="arch" type="xml">
            <pivot string="Real Estate Inspections" >
                <field name="inspection_item_id" type="row"/>
                <field name="status_percentage"/>
                <field name="result" type="col"/>
            </pivot>
        </field>
    </record>

    <record model="ir.actions.act_window" id="real_estate_inspection_line_act_window">
        <field name="name">Real Estate Inspection Line</field>
        <field name="res_model">real.estate.inspection.line</field>
        <field name="view_mode">tree,pivot,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
