<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="real_estate_inspection_item_form_view">
        <field name="name">real.estate.inspection.item.form (in real_estate_inspection)</field>
        <field name="model">real.estate.inspection.item</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <field name="note"/>    
                </sheet>
            </form>
        </field>
    </record>


    <record model="ir.ui.view" id="real_estate_inspection_item_search_view">
        <field name="name">real.estate.inspection.item.search (in real_estate_inspection)</field>
        <field name="model">real.estate.inspection.item</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="real_estate_inspection_item_tree_view">
        <field name="name">real.estate.inspection.item.tree (in real_estate_inspection)</field>
        <field name="model">real.estate.inspection.item</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="note"/> 
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="real_estate_inspection_item_act_window">
        <field name="name">Inspection Item</field>
        <field name="res_model">real.estate.inspection.item</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>


    <record model="ir.ui.view" id="real_estate_inspection_template_form_view">
        <field name="name">real.estate.inspection.template.form (in real_estate_inspection)</field>
        <field name="model">real.estate.inspection.template</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                        
                    </div>
                    <notebook>
                        <page string="Inspection Items" name="inspection_items">
                            <field name="template_line_ids" widget="one2many_list">
                                <tree string="Inspection Items"  editable='bottom'>
                                    <field name="item_id"/>
                                    <field name="weight" sum='weight'/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes_information">
                            <field name="note"/>
                        </page>
                    </notebook>
                        
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="real_estate_inspection_template_search_view">
        <field name="name">real.estate.inspection.template.search (in real_estate_inspection)</field>
        <field name="model">real.estate.inspection.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>

            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="real_estate_inspection_template_tree_view">
        <field name="name">real.estate.inspection.template.tree (in real_estate_inspection)</field>
        <field name="model">real.estate.inspection.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="real_estate_inspection_template_act_window">
        <field name="name">Inspection Template</field>
        <field name="res_model">real.estate.inspection.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <record model="ir.ui.menu" id="real_estate_inspection_item_root_menu">
        <field name="name">Inspection</field>
        <field name="parent_id" ref="real_estate.menu_config_real_estate_operations_root"/>
        <field name="sequence" eval="4"/>
    </record>
    <record model="ir.ui.menu" id="real_estate_inspection_item_menu">
        <field name="name">Inspection Items</field>
        <field name="parent_id" ref="real_estate_inspection_item_root_menu"/>
        <field name="action" ref="real_estate_inspection_item_act_window"/>
        <field name="sequence" eval="2"/>
    </record>
    <record model="ir.ui.menu" id="real_estate_inspection_template_menu">
        <field name="name">Inspection Template</field>
        <field name="parent_id" ref="real_estate_inspection_item_root_menu"/>
        <field name="action" ref="real_estate_inspection_template_act_window"/>
        <field name="sequence" eval="1"/>
    </record>

    <record model="ir.ui.view" id="appreciation_setting_form">
      <field name="name">Appreciation Setting</field>
      <field name="model">appreciation.setting</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form>
        <sheet>
        <label for="status" class="oe_edit_only"/>
        <h1>
            <field name="status" class="oe_inline" required="1"/>
        </h1>
        <group>
            <group>
                <field name="from_degree"/>
            </group>
            <group>
                <field name="to_degree"/>
            </group>
        </group>
        </sheet>
        </form>
      </field>
    </record>

 <record id="appreciation_setting_tree" model="ir.ui.view">
            <field name="name">Appreciation Setting</field>
            <field name="model">appreciation.setting</field>
            <field name="arch" type="xml">
            <tree editable="top">
                    <field name="status"/>
                    <field name="from_degree"/>
                    <field name="to_degree"/>
              </tree>
        </field>
 </record>


    <record model="ir.actions.act_window" id="appreciation_action">
      <field name="name">Appreciation Setting</field>
      <field name="res_model">appreciation.setting</field>
      <field name="view_mode">tree</field>
    </record>


<menuitem name="Appreciation Setting" id="appreciation_setting_menu"
 parent="real_estate_inspection_item_root_menu"
 action="appreciation_action"
sequence="3"/>


</odoo>
