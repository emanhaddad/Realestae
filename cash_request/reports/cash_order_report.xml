<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="cash_request.cash_order_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">

                            <div class="watermark" style="position:absolute;opacity:0.25;font-size:3em;width:100%;text-align:center;z-index:1000;">
                                <div style="position: absolute; top: 500%; left: 50%; transform: translate(-50%, -50%);">
                                    <div style="font-weight:bold;font-family: 'Times New Roman', Times, serif;font-size: 150px; color: #000;">الأصــل</div>
                                </div>
                            </div>

                            <div style="width:100%; margin: 0 auto;">   <!-- page start-->

                                <div class="text-center arabic" style="font-family: 'Times New Roman', Times, serif;">
                                    <h1 style="text-align:center; font-size:18px;font-weight:bold;border:solid 2px black;border-radius: 30px;padding: 10px 30px 10px 30px;margin-left:15%;margin-right:15%;display:inline-block;">سند صرف<br/>PAYMENT VOUCHER</h1>
                                </div>

                                <div class="text-right arabic" style="font-family: 'Times New Roman', Times, serif;">
                                    <ul class="row">
                                        <div class="col-4" style="direction:rtl;">
                                            <strong style="font-weight:bold;font-size:15px;">الرقم:</strong> &#160;<span style="font-size:15px;margin-left:90px;" t-field="o.name"/>
                                        </div>
                                        <div class="col-4" style="direction:rtl;">
                                            <strong style="font-weight:bold;font-size:15px;">التاريخ:</strong> &#160;<span style="font-size:15px;margin-left:50px;" t-field="o.date"/>
                                        </div>
                                    </ul>
                                </div>

                                <div class="text-right arabic">

                                    <div style="font-family: 'Times New Roman', Times, serif;">
                                        <div>

                                            <span style="font-weight:bold;font-size:15px;" t-esc="'Receiver:'"/>
                                            <strong class="text-right" style="margin-left:840px;font-weight:bold;font-size:15px;">:اصرف إلى</strong>
                                            <p class="text-center" style="border: solid 2px gray; border-radius: 10px; font-size:15px;background-color: #f2f2f2;" t-field="o.partner_id"/>
                                        </div>

                                        <div>
                                            <span style="font-weight:bold;font-size:15px;" t-esc="'On behalf:'"/>
                                            <strong style="margin-left:815px;font-weight:bold;font-size:15px;">:المستلم عنه</strong> &#160;<p class="text-center" style="border: solid 2px gray; border-radius: 10px; font-size:15px;background-color: #f2f2f2;" t-field="o.recever_name"/>
                                        </div>

                                        <div>
                                            <span style="font-weight:bold;font-size:15px;" t-esc="'Amount:'"/>
                                            <strong style="margin-left:870px;font-weight:bold;font-size:15px;">: المبلغ</strong> &#160;<p class="text-center" style="border: solid 2px gray; border-radius: 10px; font-size:15px;background-color: #f2f2f2;" t-field="o.amount"/>
                                        </div>

                                        <div>
                                            <span style="font-weight:bold;font-size:15px;" t-esc="'Amount in word:'"/>
                                            <strong style="margin-left:720px;font-weight:bold;font-size:15px;">: المبلغ بالأحرف</strong> &#160;<p class="text-center" style="border: solid 2px gray; border-radius: 10px; font-size:15px;background-color: #f2f2f2;" t-field="o.amount_in_word"/>
                                        </div>

                                        <div>
                                            <span style="font-weight:bold;font-size:15px;" t-esc="'Description:'"/>
                                            <strong style="margin-left:830px;font-weight:bold;font-size:15px;">:البيان</strong> &#160;<p class="text-center" style="border: solid 2px gray; border-radius: 10px; font-size:15px;background-color: #f2f2f2;" t-field="o.disc"/>
                                        </div>

                                        <div>
                                            <span style="font-weight:bold;font-size:15px;" t-esc="'Project:'"/>
                                            <strong style="margin-left:830px;font-weight:bold;font-size:15px;">:المشروع</strong> &#160;<p class="text-center" style="border: solid 2px gray; border-radius: 10px; font-size:15px;background-color: #f2f2f2;" t-field="o.projects"/>
                                        </div>

                                    </div>

                                </div>

                                <div class="text-center arabic" style="font-family: 'Times New Roman', Times, serif;">
                                    <ul class="row">
                                        <div class="col-4" style="direction:rtl;">
                                            <strong style="font-weight:bold;font-size:15px;">المدير المالي:</strong> &#160;<strong style="font-weight:bold;font-size:15px;">.................Manager</strong>
                                        </div>

                                        <div class="col-4" style="direction:rtl;">
                                            <strong style="font-weight:bold;font-size:15px;">أمين الخزينة:</strong > &#160;<strong style="font-weight:bold;font-size:15px;">.................Accountant</strong>
                                        </div>

                                        <div class="col-4" style="direction:rtl;">
                                            <strong style="font-weight:bold;font-size:15px;">المستلم:</strong> &#160;<strong style="font-weight:bold;font-size:15px;">.....................Receiver</strong>
                                        </div>
                                    </ul>
                                </div>

                            </div>  <!-- page end-->

                            <div>
                                <strong style="font-weight:bold;font-size:15px;">-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------</strong>
                            </div>

                            <div class="watermark" style="position:absolute;opacity:0.25;font-size:3em;width:100%;text-align:center;z-index:1000;">
                                <div style="position: absolute; top: 500%; left: 50%; transform: translate(-50%, -50%);">
                                    <div style="font-weight:bold;font-family: 'Times New Roman', Times, serif;font-size: 150px; color: #000;">النــسـخـة</div>
                                </div>
                            </div>

                            <div style="width:100%; margin: 0 auto;">   <!-- page start-->

                                <div class="text-center arabic" style="font-family: 'Times New Roman', Times, serif;">
                                    <h1 style="text-align:center; font-size:18px;font-weight:bold;border:solid 2px black;border-radius: 30px;padding: 10px 30px 10px 30px;margin-left:15%;margin-right:15%;display:inline-block;">سند صرف<br/>PAYMENT VOUCHER</h1>
                                </div>

                                <div class="text-right arabic" style="font-family: 'Times New Roman', Times, serif;">
                                    <ul class="row">
                                        <div class="col-4" style="direction:rtl;">
                                            <strong style="font-weight:bold;font-size:15px;">الرقم:</strong> &#160;<span style="font-size:15px;margin-left:90px;" t-field="o.name"/>
                                        </div>
                                        <div class="col-4" style="direction:rtl;">
                                            <strong style="font-weight:bold;font-size:15px;">التاريخ:</strong> &#160;<span style="font-size:15px;margin-left:50px;" t-field="o.date"/>
                                        </div>
                                    </ul>
                                </div>

                                <div class="text-right arabic">

                                    <div style="font-family: 'Times New Roman', Times, serif;">
                                        <div>

                                            <span style="font-weight:bold;font-size:15px;" t-esc="'Receiver:'"/>
                                            <strong class="text-right" style="margin-left:840px;font-weight:bold;font-size:15px;">:اصرف إلى</strong>
                                            <p class="text-center" style="border: solid 2px gray; border-radius: 10px; font-size:15px;background-color: #f2f2f2;" t-field="o.partner_id"/>
                                        </div>

                                        <div>
                                            <span style="font-weight:bold;font-size:15px;" t-esc="'On behalf:'"/>
                                            <strong style="margin-left:815px;font-weight:bold;font-size:15px;">:المستلم عنه</strong> &#160;<p class="text-center" style="border: solid 2px gray; border-radius: 10px; font-size:15px;background-color: #f2f2f2;" t-field="o.recever_name"/>
                                        </div>

                                        <div>
                                            <span style="font-weight:bold;font-size:15px;" t-esc="'Amount:'"/>
                                            <strong style="margin-left:870px;font-weight:bold;font-size:15px;">: المبلغ</strong> &#160;<p class="text-center" style="border: solid 2px gray; border-radius: 10px; font-size:15px;background-color: #f2f2f2;" t-field="o.amount"/>
                                        </div>

                                        <div>
                                            <span style="font-weight:bold;font-size:15px;" t-esc="'Amount in word:'"/>
                                            <strong style="margin-left:720px;font-weight:bold;font-size:15px;">: المبلغ بالأحرف</strong> &#160;<p class="text-center" style="border: solid 2px gray; border-radius: 10px; font-size:15px;background-color: #f2f2f2;" t-field="o.amount_in_word"/>
                                        </div>

                                        <div>
                                            <span style="font-weight:bold;font-size:15px;" t-esc="'Description:'"/>
                                            <strong style="margin-left:830px;font-weight:bold;font-size:15px;">:البيان</strong> &#160;<p class="text-center" style="border: solid 2px gray; border-radius: 10px; font-size:15px;background-color: #f2f2f2;" t-field="o.disc"/>
                                        </div>

                                        <div>
                                            <span style="font-weight:bold;font-size:15px;" t-esc="'Project:'"/>
                                            <strong style="margin-left:830px;font-weight:bold;font-size:15px;">:المشروع</strong> &#160;<p class="text-center" style="border: solid 2px gray; border-radius: 10px; font-size:15px;background-color: #f2f2f2;" t-field="o.projects"/>
                                        </div>

                                    </div>

                                </div>

                                <div class="text-center arabic" style="font-family: 'Times New Roman', Times, serif;">
                                    <ul class="row">
                                        <div class="col-4" style="direction:rtl;">
                                            <strong style="font-weight:bold;font-size:15px;">المدير المالي:</strong> &#160;<strong style="font-weight:bold;font-size:15px;">.................Manager</strong>
                                        </div>

                                        <div class="col-4" style="direction:rtl;">
                                            <strong style="font-weight:bold;font-size:15px;">أمين الخزينة:</strong > &#160;<strong style="font-weight:bold;font-size:15px;">.................Accountant</strong>
                                        </div>

                                        <div class="col-4" style="direction:rtl;">
                                            <strong style="font-weight:bold;font-size:15px;">المستلم:</strong> &#160;<strong style="font-weight:bold;font-size:15px;">.....................Receiver</strong>
                                        </div>
                                    </ul>
                                </div>

                            </div>  <!-- page end-->

                            <!-- Report Button -->
                            <t t-if="o.state in ('general', 'financial', 'paid')">
                                <div class="text-center">
                                    <button class="btn btn-primary" type="button" onclick="window.print();">Print Report</button>
                                </div>
                            </t>
                            
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
