<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="payments_inherit_form">
      <field name="name">payments_inherit form</field>
      <field name="inherit_id" ref="account.view_account_payment_form" />
      <field name="model">account.payment</field>
      <field name="arch" type="xml">

        <xpath expr="//field[@name='partner_id']" position="after">
          <field name="cost_center" options="{'no_create': True}"/>
        </xpath>

        <xpath expr="//field[@name='partner_id']" position="attributes">
          <attribute name="required">1</attribute>
        </xpath>

        <!-- <xpath expr="//field[@name='destination_account_id']" position="replace">
          <field name="destination_account_id" domain="[]" required="1" options="{'no_create': True}"/>
        </xpath> -->
        
      </field>
    </record>

  </data>
</odoo>