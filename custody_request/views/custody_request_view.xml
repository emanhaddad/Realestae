<!-- custody category Record Form,Tree View & Action -->
		<record id="custody_category_view_form" model="ir.ui.view">
			<field name="name">custody.category.form</field>
			<field name="model">custody.category</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="custody category" version="7.0">
					<sheet>
						<group col="4" colspan="2">
							<field name="name" colspan="1" required="1" />
                            <field name="max_amount"/>
							<field name="account_id" required="1"/>
							<field name="analytic_id"/>
							<field name="journal_id"/>
							<field name="company_id" select="1" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="custody_category_view_tree" model="ir.ui.view">
			<field name="name">custody.category.tree</field>
			<field name="model">custody.category</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="custody category">
					<field name="name" />
					<field name="company_id"/>
				</tree>
			</field>
		</record>

        <record id="custody_category_action" model="ir.actions.act_window">
            <field name="name">Custody Category</field>
            <field name="res_model">custody.category</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="custody_category_menu" name="Custody Category" sequence="100" parent="main_menu_configuration" action="custody_category_action"/>

<!-- custody statement Record Form,Tree View & Action -->
		<record id="custody_statement_view_form" model="ir.ui.view">
			<field name="name">custody.statement.form</field>
			<field name="model">custody.statement</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Custody Statement" version="7.0">
					<sheet>
						<group col="4" colspan="2">
							<field name="name" colspan="1" required="1" />
							<field name="account_id" required="1"/>
							<field name="journal_id" required="1"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="custody_statement_view_tree" model="ir.ui.view">
			<field name="name">custody.statement.tree</field>
			<field name="model">custody.statement</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Custody Statement">
					<field name="name" colspan="1" required="1" />
                    <field name="account_id" required="1"/>
				    <field name="journal_id" required="1"/>
				</tree>
			</field>
		</record>

        <record id="custody_statement_action" model="ir.actions.act_window">
            <field name="name">Custody statement</field>
            <field name="res_model">custody.statement</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="custody_statement_menu" name="Custody statement" sequence="100" parent="main_menu_configuration" action="custody_statement_action"/>


    </data>
</odoo>
