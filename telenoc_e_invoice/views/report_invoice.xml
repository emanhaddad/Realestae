<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice" inherit_id="account.report_invoice">
        <xpath expr='//t[@t-call="account.report_invoice_document"]' position="after">
            <t t-if="o._get_name_invoice_report() == 'telenoc_e_invoice.arabic_english_invoice'"
               t-call="telenoc_e_invoice.arabic_english_invoice" t-lang="lang"/>
        </xpath>
    </template>

    <template id="report_invoice_with_payments" inherit_id="account.report_invoice_with_payments">
        <xpath expr='//t[@t-call="account.report_invoice_document"]' position="after">
            <t t-if="o._get_name_invoice_report() == 'telenoc_e_invoice.arabic_english_invoice'"
               t-call="telenoc_e_invoice.arabic_english_invoice" t-lang="lang"/>
        </xpath>
    </template>

    <template id="arabic_english_invoice">
        <t t-call="telenoc_e_invoice.external_layout_standard">

            <t t-set="o_sec" t-value="o.with_context(lang='ar_001')"/>
            <t t-set="o" t-value="o.with_context(lang='en_US')"/>

            <div class="page">
                
                <style>
                    .mla .ml-auto
                    {
                        margin-left:0px !important;
                        margin-bottom:2px !important;
                    }
                </style>
                <div name="internal_header">
                    <div class="row" style="margin-bottom:20px;">
                        <div class="col-4" name="company_address">
                            <div t-field="o.company_id.partner_id"
                                t-options='{"widget": "contact", "fields": ["address","name"], "no_marker": true}'
                            />
                            <p t-if="o.company_id.partner_id.vat">
                                <t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>:
                                <span t-field="o.company_id.partner_id.vat"/>
                            </p>
                        </div>

                        <div class="col-4 text-center">
                            <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 45px;"
                                alt="Logo"/>
                        </div>
                        <!-- removed -->
                        <!--div class="col-4 text-center">
                            <img t-if="o.l10n_sa_qr_code_str"
                                t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', o.l10n_sa_qr_code_str, 100, 100)"/>
                        </div-->
                        
                        <div class="col-4" name="company_address" style="text-align:left">
                            <div style="text-align:left">  
                                <strong>
                                    Bill To : 
                                </strong>
                            </div>
                            <div class="invoice_address">
                                <div>
                                    <strong t-field="o.partner_id.name"/>
                                </div>
                                <span t-field="o.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address","vat"], "no_marker": true}'
                                />
                            </div>
                        </div>
                    </div>
                </div>
                
                <h3>
                    <div class="row">
                        <div class="col-4" style="text-align:left">
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                                Tax Invoice
                            </span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">
                                Draft Invoice
                            </span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">
                                Cancelled Invoice
                            </span>
                            <span t-if="o.move_type == 'out_refund'">
                                Credit Note
                            </span>
                            <span t-if="o.move_type == 'in_refund'">
                                Vendor Credit Note
                            </span>
                            <span t-if="o.move_type == 'in_invoice'">
                                Vendor Bill
                            </span>
                        </div>
                        <div class="col-4">
                            <span t-if="o.n_name != '/'" t-field="o.n_name"/>
                        </div>
                        <div class="col-4" style="text-align:right">
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                                فاتورة ضريبية
                            </span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">
                                مسودة فاتورة
                            </span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">
                                فاتورة ملغاة
                            </span>
                            <span t-if="o.move_type == 'out_refund'">
                                إشعار خصم
                            </span>
                            <span t-if="o.move_type == 'in_refund'">
                                إشعار خصم المورد
                            </span>
                            <span t-if="o.move_type == 'in_invoice'">
                                فاتورة المورد
                            </span>
                        </div>
                    </div>
                </h3>

                <div id="informations" class="pb-3">
                    <div class="row" name="invoice_date">
                        <div class="col-4">
                            <strong style="white-space:nowrap">Invoice Date:
                            </strong>
                        </div>
                        <div class="col-4">
                            <span t-field="o.invoice_date"/>
                        </div>
                        <div class="col-4 text-right">
                            <strong style="white-space:nowrap">:
                                تاريخ الفاتورة
                            </strong>
                        </div>
                    </div>

                    <div class="row" name="invoice_date">
                        <div class="col-4">
                            <strong style="white-space:nowrap">Due Date:
                            </strong>
                        </div>
                        <div class="col-4">
                            <span t-field="o.invoice_date_due"/>
                        </div>
                        <div class="col-4 text-right">
                            <strong style="white-space:nowrap">:
                                تاريخ الإستحقاق
                            </strong>
                        </div>
                    </div>
                    
                    <div class="row" t-if="o.invoice_origin" name="origin">
                        <div class="col-4">
                            <strong style="white-space:nowrap">Source:
                            </strong>
                        </div>
                        <div class="col-4">
                            <span t-field="o.invoice_origin"/>
                        </div>
                        <div class="col-4 text-right">
                            <strong style="white-space:nowrap">:
                                المصدر
                            </strong>
                        </div>
                    </div>
                    
                    <div class="row" t-if="o.ref" name="reference">
                        <div class="col-4">
                            <strong style="white-space:nowrap">Reference:
                            </strong>
                        </div>
                        <div class="col-4">
                            <span t-field="o.ref"/>
                        </div>
                        <div class="col-4 text-right">
                            <strong style="white-space:nowrap">:
                                رقم الإشارة
                            </strong>
                        </div>
                    </div>

                    <div class="row" t-if="o.subject" name="subject">
                        <div class="col-4">
                            <strong style="white-space:nowrap">Subject:
                            </strong>
                        </div>
                        <div class="col-4">
                            <span t-field="o.subject"/>
                        </div>
                        <div class="col-4 text-right">
                            <strong style="white-space:nowrap">:
                                العنوان
                            </strong>
                        </div>
                    </div>

                    <div class="row" t-if="o.job_number" name="ref">
                        <div class="col-4">
                            <strong style="white-space:nowrap">Customer Ref.:
                            </strong>
                        </div>
                        <div class="col-4">
                            <span t-field="o.job_number"/>
                        </div>
                        <div class="col-4 text-right">
                            <strong style="white-space:nowrap">:
                                مرجع العميل
                            </strong>
                        </div>
                    </div>

                    <div class="row" t-if="o.request_id" name="clearance request">
                        <div class="col-4">
                            <strong style="white-space:nowrap">Order no.:
                            </strong>
                        </div>
                        <div class="col-4">
                            <span t-field="o.request_id.name"/>
                        </div>
                        <div class="col-4 text-right">
                            <strong style="white-space:nowrap">:
                                رقم الطلب
                            </strong>
                        </div>
                    </div>
                </div>

                <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                <table class="table table-sm o_main_table border-black" name="invoice_line_table">
                    <thead style="background-color:#ECEEF0">
                        <tr>
                            <t t-set="colspan" t-value="6"/>
                            <th name="th_description" class="text-center" style="white-space: nowrap;">
                                <span>
                                    Description
                                </span>
                                <br/>
                                <span>
                                    الوصف
                                </span>
                            </th>
                            <th name="th_source" class="d-none text-left" t-if="0">
                                <span>
                                    Source Document
                                </span>
                                <br/>
                                <span>
                                    المستند المصدر
                                </span>
                            </th>
                            <th name="th_quantity" class="text-center" style="white-space: nowrap;">
                                <span>
                                    Quantity
                                </span>
                                <br/>
                                <span>
                                    الكمية
                                </span>
                            </th>
                            <th name="th_priceunit"
                                class="text-center" style="white-space: nowrap;">
                                <span>
                                    Unit price
                                </span>
                                <br/>
                                <span>
                                    سعر الوحدة
                                </span>
                            </th>
                            <th name="th_price_unit" t-if="display_discount"
                                class="text-center" style="white-space: nowrap;">
                                <span>
                                    Disc.%
                                </span>
                                <br/>
                                <span>
                                    خصم %
                                </span>
                                <t t-set="colspan" t-value="colspan+1"/>
                            </th>
                            <th name="th_taxes"
                                class="text-center" style="white-space: nowrap;">
                                <span>
                                    Taxes
                                </span>
                                <br/>
                                <span>
                                    الضرائب
                                </span>
                            </th>
                            <th name="th_subtotal" class="text-center" style="white-space: nowrap;">
                                <span>
                                    Amount
                                </span>
                                <br/>
                                <span>
                                    مبلغ
                                </span>
                            </th>
                            <th name="th_tax_amount"
                                class="text-center" style="white-space: nowrap;">
                                <span>
                                    VAT Amount
                                </span>
                                <br/>
                                <span>
                                    قيمة الضريبة
                                </span>
                            </th>
                            <th name="th_total" class="text-center" style="white-space: nowrap;">
                                <span>
                                    Total Price
                                </span>
                                <br/>
                                <span>
                                    السعر الاجمالي
                                </span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="lines"
                           t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>


                        <t t-foreach="lines" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                    <td name="account_invoice_line_name">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        <t t-if="line.product_id.name != line.with_context(lang='ar_001').product_id.name">
                                            <br/>
                                            <span t-field="line.with_context(lang='ar_001').product_id.name"
                                                  t-options="{'widget': 'text'}"/>
                                        </t>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <span class="text-nowrap" t-field="line.price_unit"/>
                                    </td>
                                    <td t-if="display_discount"
                                        class="text-right">
                                        <span class="text-nowrap" t-field="line.discount"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"
                                              id="line_tax_ids"/>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="line.price_subtotal"/>
                                    </td>
                                    <td class="text-right">
                                        <span class="text-nowrap" t-field="line.telenoc_e_invoice_tax_amount"/>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="line.price_total"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td colspan="99">
                                        <strong class="mr16" style="display: inline-block">Subtotal/الإجمالي الفرعي</strong>
                                        <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div class="clearfix pt-4 pb-3">
                    <div id="total" class="row">
                        <div class="col-6">
                        <div class="col-4 text-center">
                            <img t-if="o.l10n_sa_qr_code_str"
                                t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', o.l10n_sa_qr_code_str, 100, 100)"/>
                        </div>
                        </div>
                        <div class="col-6">
                            <table class="table table-sm" style="page-break-inside: avoid;">
                                <tr class="border-black o_subtotal">
                                    <td>
                                        <strong>
                                            Subtotal
                                            /
                                            الإجمالي الفرعي
                                        </strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed"/>
                                    </td>
                                </tr>
                                <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                    <tr style="">
                                        <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">
<!--                                            <td><span class="text-nowrap" t-esc="amount_by_group[0]"/></td>-->
                                            <td><strong>VAT/ الضريبة</strong></td>
                                            <td class="text-right o_price_total">
                                                <span class="text-nowrap" t-esc="amount_by_group[3]" />
                                            </td>
                                        </t>
                                        <t t-else="">
                                          
<!--                                                <span t-esc="amount_by_group[0]"/>-->
                                                <td><strong>VAT/ الضريبة</strong></td>
<!--
                                                <span class="text-nowrap"> on
                                                    <t t-esc="amount_by_group[4]"/>
                                                </span>
-->
                                          
                                            <td class="text-right o_price_total">
                                                <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                                <tr class="border-black o_total">
                                    <td>
                                        <strong>
                                            Total
                                            /
                                            المجموع
                                        </strong>
                                    </td>
                                    <td class="text-right">
                                        <span class="text-nowrap" t-field="o.amount_total"/>
                                    </td>
                                </tr>

                                <t t-if="print_with_payments">
                                    <t t-if="o.payment_state != 'invoicing_legacy'">
                                        <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                        <t t-foreach="payments_vals" t-as="payment_vals">
                                            <tr class="border-black o_total">
                                                <td>
                                                    <i class="row">
                                                        <div class="col-7 oe_form_field oe_payment_label">
                                                            Paid on/دفعت في:
                                                        </div>
                                                        <div class="col-5 pl-0 oe_form_field oe_payment_label">
                                                            <t t-esc="payment_vals['date']"/>
                                                        </div>
                                                    </i>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="payment_vals['amount']"
                                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="len(payments_vals) > 0">
                                            <tr class="border-black">
                                                <td>
                                                    <strong>
                                                        Amount Due
                                                        /
                                                        المبلغ المستحق
                                                    </strong>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="o.amount_residual"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                            </table>
                        </div>
                    </div>
                </div>

                <p t-if="o.move_type in ('out_invoice', 'in_refund')" name="notes">
                    <div class="row">
                        <div class="col-6 text-left" style="font-size:0.65rem">
                            <h5>
                                <u>
                                    Bank Details :
                                </u>
                            </h5>
                        </div>
                    </div>
                </p>

                <p t-if="o.move_type in ('out_invoice', 'in_refund')" name="payment_communication">
                    <div class="row">
                        <div class="col-6 text-left" style="font-size:0.60rem">
                            <b>
                            Account Title :
                            </b>
                            <span>
                                Awad Jarallah Alqahtani Customs Clearance Company
                            </span>
                        </div>
                        <div class="col-6 text-right" style="direction: rtl;font-size:0.60rem">
                            <b>
                            اسم الحساب:
                            </b>
                            <span>
                                شركة عوض جارالله القحطاني للتخليص الجمركي
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 text-left" style="font-size:0.60rem">
                            <b>
                            Bank Name :
                            </b>
                            <span>
                                Saudi National Bank
                            </span>
                        </div>
                        <div class="col-6 text-right" style="direction: rtl;font-size:0.60rem">
                            <b>
                            اسم البنك:
                            </b>
                            <span>
                                البنك الأهلي السعودي
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 text-left" style="font-size:0.60rem">
                            <b>
                            Account No :
                            </b>
                            <span>
                                08200000185203
                            </span>
                        </div>
                        <div class="col-6 text-right" style="direction: rtl;font-size:0.60rem">
                            <b>
                            رقم الحساب:
                            </b>
                            <span>
                                08200000185203
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 text-left" style="font-size:0.60rem">
                            <b>
                            IBAN :
                            </b>
                            <span>
                                SA8710000008200000185203
                            </span>
                        </div>
                        <div class="col-6 text-right" style="direction: rtl;font-size:0.60rem">
                            <b>
                            رقم الحساب آيبان :
                            </b>
                            <span>
                                SA8710000008200000185203
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 text-left" style="font-size:0.60rem">
                            <b>
                            Account Currency :
                            </b>
                            <span>
                                Riyal Saudi
                            </span>
                        </div>
                        <div class="col-6 text-right" style="direction: rtl;font-size:0.60rem">
                            <b>
                            عملة الحساب:
                            </b>
                            <span>
                                ريال سعودي
                            </span>
                        </div>
                    </div>
                </p>

                <p t-if="o.move_type in ('out_invoice', 'in_refund')" name="notes">
                    <div class="row" style="font-size:0.60rem">
                        <div class="col-12 text-left">
                            <b>
                                Terms and Conditions :
                            </b>
                            <div>
                                <span>
                                    1. Awad Logistics is not responsible for any cash settlement without any official receipt.
                                </span>
                            </div>
                            <div>
                                <span>
                                    2. Any discrepancy should be notified to us in writing within 3 days after received or otherwise invoice will be considered as accepted.
                                </span>
                            </div>
                            
                        </div>
                    </div>
                </p>

                <p t-if="o.invoice_payment_term_id" name="payment_term">
                    <div class="row" style="font-size:0.65rem">
                        <div class="col-6 text-left">
                            <span t-field="o.invoice_payment_term_id.note"/>
                        </div>
                        <div class="col-6 text-right" style="direction: rtl;">
                            <span dir="rtl" t-field="o_sec.invoice_payment_term_id.note"/>
                        </div>

                    </div>
                </p>

                <p t-if="o.move_type in ('out_invoice', 'in_refund')" name="notes">
                    <div class="row">
                        <div class="col-6 text-left" style="font-size:0.65rem">
                            <b>
                                Notes :
                            </b>
                            <span>
                                Thanks for your business.
                            </span>
                        </div>
                    </div>
                </p>

                <p t-if="o.narration" name="comment">
                    <div class="row">
                        <div class="col-6 text-left">
                            <span t-field="o.narration"/>
                        </div>
                        <div class="col-6 text-right">
                            <span t-field="o_sec.narration"/>
                        </div>
                    </div>
                </p>
                <p t-if="o.fiscal_position_id.note" name="note">
                    <div class="row">
                        <div class="col-6 text-left">
                            <span t-field="o.fiscal_position_id.note"/>
                        </div>
                        <div class="col-6 text-right">
                            <span t-field="o_sec.fiscal_position_id.note"/>
                        </div>
                    </div>
                </p>
                <p t-if="o.invoice_incoterm_id" name="incoterm">
                    <div class="row">
                        <div class="col-6 text-left">
                            <strong>Incoterm:
                            </strong>
                            <span
