<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="project_construction_settings_form" model="ir.ui.view">
        <field name="name">Construction Project Settings Form View</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='project']" position="inside">
                <h2>Construction Settings</h2>
                <div class="row mt16 o_settings_container" id="construction_main">
                    <div class="col-12 col-lg-6 o_setting_box" id="construction_contract">
                        <div class="o_setting_left_pane">
                            <field name="module_construction_contract"/>
                        </div>
                        <div class="o_setting_right_pane" name="pad_project_right_pane">
                            <label for="module_construction_contract"/>
                            <div class="text-muted">
                                Manage Construction Contracts, receipts and settlements.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>