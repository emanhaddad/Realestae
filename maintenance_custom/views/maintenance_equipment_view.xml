<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form view -->
    <record id="hr_equipment_view_form_inherit" model="ir.ui.view">
        <field name="name">maintenance.equipment.form</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
        <field name="arch" type="xml">
            <field name="employee_id" position="before">
                <field name="customer_id" attrs="{'invisible':[('equipment_assign_to','in',['department','employee'])]}"/>
            </field>
            <field name="employee_id" position="attributes">
                <attribute name="attrs">{'invisible': [('equipment_assign_to', 'in', ['department','customer'])]}</attribute>
            </field>
            <field name="department_id" position="attributes">
                <attribute name="attrs">{'invisible': [('equipment_assign_to', 'in', ['employee','customer'])]}</attribute>
            </field>
            <field name="serial_no" position="replace">
                <field name="serial_id"/>
            </field>
        </field>
    </record>

    <!-- Inherit Tree view -->
    <record id="hr_equipment_view_tree_inherit" model="ir.ui.view">
        <field name="name">maintenance.equipment.tree</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_tree"/>
        <field name="arch" type="xml">
            <field name="serial_no" position="replace">
                <field name="serial_id"/>
            </field>
        </field>
    </record>

    <record id="hr_equipment_stage_view_tree_inherit" model="ir.ui.view">
        <field name="name">maintenance.stage.tree</field>
        <field name="model">maintenance.stage</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_stage_view_tree"/>
        <field name="arch" type="xml">
            <field name="done" position="after">
                <field name="repaired_stage"/>
            </field>
        </field>
    </record>
    

</odoo>