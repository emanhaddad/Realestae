<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <div name="button_box" position="inside">
                <button name="open_equipment" type="object" icon="fa-flask" class="oe_stat_button" help="Equipment">
                    <field name="equipment_count" widget="statinfo"/>
                </button>
                <button name="open_maintanance" type="object" icon="fa-wrench" class="oe_stat_button" help="Maintanance">
                    <field name="maintanance_count" widget="statinfo"/>
                </button>
                <button name="open_installation" type="object" icon="fa-gears" class="oe_stat_button" help="Installation">
                    <field name="installation_count" widget="statinfo"/>
                </button>
            </div>


        </field>
    </record>


</odoo>