<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record model="ir.ui.view" id="budget_analytic_form_inherit">
			<field name="name">budget.analytic.form</field>
			<field name="model">budget.analytic</field>
			<field name="inherit_id" ref="account_budget.view_budget_analytic_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='item_ids']/tree//field[@name='account_id']" position="after">
					<field name="warning_type"/>
					<field name="is_active"/>
					<field name="allow2_manager" attrs="{'invisible': [('warning_type', '!=', 'restrict')]}"/>
				</xpath>
			</field>
		</record>
		<record model="ir.ui.view" id="account_report_budget_inherit">
			<field name="name">account.report.budget.form</field>
			<field name="model">account.report.budget</field>
			<field name="inherit_id" ref="account_budget.view_budget_analytic_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='budget_line_ids']/tree//field[@name='account_id']" position="after">
					<field name="warning_type"/>
					<field name="is_active"/>
					<field name="allow2_manager" attrs="{'invisible': [('warning_type', '!=', 'restrict')]}"/>
				</xpath>
			</field>
		</record>

		<record model="ir.ui.view" id="purchase_order_form_inherit">
			<field name="name">purchase.order.form</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='name']" position="after">
					<div invisible="not is_warning" class="label label-info">
					
					<field invisible="1" name="is_warning"/>
					<span><h3><field readonly="1" name="exceed_note"/></h3></span>
					</div>
				</xpath>
			</field>
		</record>

		<record model="ir.ui.view" id="view_move_form_inherit">
			<field name="name">account.move.form</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='name']" position="after">
					<div invisible="not is_warning">
					<field invisible="1" name="is_warning"/>
					<span><h3><field readonly="1" name="exceed_note" class="label label-info"/></h3></span>
					</div>
				</xpath>
			</field>
		</record>

</data>
</odoo>