<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="real_estate_maintenance.evacuate">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div style="width:100%; margin: 0 auto;"> <!-- page start-->
                            <div class="text-center arabic" style="font-family: 'Times New Roman', Times, serif;">
                                <h1 style="text-align:center; font-size:25px;font-weight:bold;border:solid 2px black;border-radius: 30px;padding: 10px 30px 10px 30px;margin-left:15%;margin-right:15%;display:inline-block;">نموذج الموافقة على الإفراغ</h1>
                            </div>

                            <div class="text-right arabic" style="font-family: 'Times New Roman', Times, serif;">
                                <ul class="row">
                                    <div class="col-4" style="direction:rtl;">
                                        <strong style="font-weight:bold;font-size:20px;">الرقم:</strong> &#160;<span style="font-size:20px;margin-left:90px;" t-field="o.name"/>
                                    </div>
                                    <div class="col-4" style="direction:rtl;">
                                        <strong style="font-weight:bold;font-size:20px;">التاريخ:</strong> &#160;<span style="font-size:20px;margin-left:50px;" t-field="o.date"/>
                                    </div>
                                </ul>
                            </div>

                            <br/>

                            <div class="text-center arabic">
                                <strong style="text-align: center; font-family: 'Times New Roman', Times, serif; font-weight: bold; border: solid 2px gray; border-radius: 30px;padding: 10px 30px 10px 30px; font-size: 20px;background-color: #f2f2f2;">بيانات العميل</strong> 
                            </div>

                            <br/>

                            <table style="font-size:20px;font-family: 'Times New Roman', Times, serif;border-collapse: collapse; width: 100%;" class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>رقم الجوال</th>
                                        <th>رقم الهوية</th>
                                        <th>الاسم</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="docs" t-as="o">
                                        <td>
                                            <span t-field="o.phone"/>
                                        </td>
                                        <td>
                                            <span t-field="o.num_id"/>
                                        </td>
                                        <td>
                                            <span t-field="o.partner_id"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <br/>

                            <div class="text-center arabic">
                                <strong style="text-align: center; font-family: 'Times New Roman', Times, serif; font-weight: bold; border: solid 2px gray; border-radius: 30px;padding: 10px 30px 10px 30px; font-size: 20px;background-color: #f2f2f2;">بيانات الشقة</strong> 
                            </div>

                            <br/>

                            <table style="font-size:20px;font-family: 'Times New Roman', Times, serif;border-collapse: collapse; width: 100%;" class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>الدور</th>
                                        <th>الوحدة</th>
                                        <th>المشروع</th>
                                    </tr>
                                </thead>
                                    <tbody>
                                    <tr t-foreach="docs" t-as="o">
                                        <td>
                                            <span t-field="o.property_floors"/>
                                        </td>
                                        <td>
                                            <span t-field="o.unit_id"/>
                                        </td>
                                        <td>
                                            <span t-field="o.real_estate_id"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <br/>

                            <div class="text-center arabic">
                                <strong style="text-align: center; font-family: 'Times New Roman', Times, serif; font-weight: bold; border: solid 2px gray; border-radius: 30px;padding: 10px 30px 10px 30px; font-size: 20px;background-color: #f2f2f2;">بيانات العقد</strong> 
                            </div>

                            <br/>

                            <table style="font-size:20px;font-family: 'Times New Roman', Times, serif;border-collapse: collapse; width: 100%;" class="table table-condensed">
                                <thead>
                                    <tr>
                                        <!-- <th>مستحقات للعميل</th> -->
                                        <!-- <th>متطلبات على العميل</th> -->
                                        <th>مدته</th>
                                        <th>تاريخ الإخطار</th>
                                        <th>نهايته</th>
                                        <th>بدايته</th>
                                        <th>تاريخ العقد</th>
                                        <th>رقم العقد</th>
                                    </tr>
                                </thead>
                                    <tbody>
                                    <tr t-foreach="docs" t-as="o">
                                        <!-- <td>
                                            <span t-field="o.compensation_amount"/>
                                        </td> -->
                                        <!-- <td>
                                            <span t-field="o.residual_amount"/>
                                        </td> -->
                                        <td>
                                            <span t-field="o.contract_period"/>
                                        </td>
                                        <td>
                                            <span t-field="o.notify_date"/>
                                        </td>
                                        <td>
                                            <span t-field="o.date_end"/>
                                        </td>
                                        <td>
                                            <span t-field="o.date_start"/>
                                        </td>
                                        <td>
                                            <span t-field="o.date"/>
                                        </td>
                                        <td>
                                            <span t-field="o.contract_id"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <br/>

                            <div class="text-center arabic">
                                <strong style="text-align: center; font-family: 'Times New Roman', Times, serif; font-weight: bold; border: solid 2px gray; border-radius: 30px;padding: 10px 30px 10px 30px; font-size: 20px;background-color: #f2f2f2;">بيانات الصك</strong> 
                            </div>

                            <br/>

                            <table style="font-size:20px;font-family: 'Times New Roman', Times, serif;border-collapse: collapse; width: 100%;" class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>الوحدة</th>
                                        <th>التاريخ</th>
                                        <th>الرقم</th>
                                    </tr>
                                </thead>
                                    <tbody>
                                    <tr t-foreach="docs" t-as="o">
                                        <td>
                                            <span t-field="o.unit_num"/>
                                        </td>
                                        <td>
                                            <span t-field="o.date_con"/>
                                        </td>
                                        <td>
                                            <span t-field="o.number_id"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <br/>

                            <div class="row">
                                <div class="col-3" style="font-family: 'Times New Roman', Times, serif; border: solid 2px gray; border-radius: 20px; font-size: 19px;">
                                    <div class="text-center">
                                        <strong>المدير العام</strong>
                                        <br/><br/><br/>
                                    </div>
                                </div>

                                <div class="col-3" style="font-family: 'Times New Roman', Times, serif; border: solid 2px gray; border-radius: 20px; font-size: 19px;">
                                    <div class="text-center">
                                        <strong>الإفراغ</strong>
                                        <br/><br/><br/>
                                    </div>
                                </div>

                                <div class="col-3" style="font-family: 'Times New Roman', Times, serif; border: solid 2px gray; border-radius: 20px; font-size: 19px;">
                                    <div class="text-center">
                                        <strong>الإستثمار</strong>
                                        <br/><br/><br/>
                                    </div>
                                </div>

                                <div class="col-3" style="font-family: 'Times New Roman', Times, serif; border: solid 2px gray; border-radius: 20px; font-size: 19px;">
                                    <div class="text-center">
                                        <strong>المالية</strong>
                                        <br/><br/><br/>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
