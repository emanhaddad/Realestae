<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="real_booking_cancellation_form" model="ir.ui.view">
            <field name="name">real.booking.cancellation.wiz</field>
            <field name="model">real.booking.cancellation</field>
            <field name="arch" type="xml">
                <form string="Booking cancellation">
                    <group>
                        <group>
                            <field name="booking_id" invisible='1'/>
                            <field name="reason_id"/>
                        </group>

                        
                    </group>
                    <footer>
                   		<button name="approve_cancellation" string="OK" type="object" default_focus="1" class="oe_highlight"/>
                  		or
                  		<button string="Cancel" class="oe_link" special="cancel"/>
                	</footer>
                </form>
            </field>
        </record>


        <record id="action_real_booking_cancellation" model="ir.actions.act_window">
            <field name="name">Booking cancellation</field>
            <field name="res_model">real.booking.cancellation</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
       
    </data>
</odoo>

