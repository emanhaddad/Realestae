<odoo>
    <data>

        <record model="ir.actions.act_window" id="action_real_estate_report_view">
            <field name="name">Real Estate</field>
            <field name="res_model">real.estate.report</field>
            <field name="view_mode">pivot</field>
        </record>

        <record id="product_sales_analysis_pivot_view" model="ir.ui.view">
            <field name="name">Real Estate Report Pivot</field>
            <field name="model">real.estate.report</field>
            <field name="arch" type="xml">
                <pivot string="Real Estate" disable_linking="True">
                    <field name="property_name" type="row"/>
                    <!-- <field name="property_charact" type="col"/> -->
                    <field name="property_type_id" type="measure"/>
                    <field name="asanseer_nums" type="measure"/>
                    <field name="property_total_area" type="measure"/>
                    <field name="property_builtup_area" type="measure"/>
                    <!-- <field name="property_units_number" type="measure"/> -->
                    <field name="num_of_share" type="measure"/>
                    <field name="property_share_number" type="measure"/>
                    <field name="remain_share_number" type="measure"/>
                </pivot>
            </field>
        </record>


        <!-- menu -->

        <menuitem id="menu_real_estate_report_root" 
                name="Reports" 
                sequence="10"
                parent="real_estate.menu_real_estate_main"/>

        <menuitem id="menu_real_estate_report" 
                name="Real Estate" 
                parent="menu_real_estate_report_root" 
                sequence="1"/>

        <menuitem id="menu_realestate_details" 
                parent="menu_real_estate_report" 
                action="action_real_estate_report_view" 
                sequence="1"/>

    </data>
</odoo>
