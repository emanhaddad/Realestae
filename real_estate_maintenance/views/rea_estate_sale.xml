<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="real_estate_sale_view_form" model="ir.ui.view">
        <field name="name">real.estate.sale</field>
        <field name="model">real.estate.sale</field>
        <field name="arch" type="xml">
            <form string="Real estate sale">
                <header>
                        <button string="Set to new" name="set_to_new" type="object" states='cancel' class="oe_highlight" />

                        <button string="Confirm Buying" name="action_first_confirm" type="object" states='new' class="oe_highlight" />
                        <button string="Final Confirm" name="action_confirm" type="object"  class="oe_highlight" states="first_confirm" groups="real_estate_maintenance.Sale_manager_group"/>

                        <field name="state" widget="statusbar" statusbar_visible="new,first_confirm,confirmed,cancel"/>

                </header>
                <sheet>

                    <div class="oe_button_box">
                        <button class="oe_stat_button" name="action_payment" type="object" icon="fa-files-o" attrs="{'invisible':[('sale_type','=','sale')]}">
                            <field string="Resale Payment" name="resale_ids" widget="statinfo"/>
                        </button>
                    </div>

                    <group>
                        <field name="sale_type" widget="radio" options="{'horizontal': true}" attrs="{'readonly': [('state', '!=', 'new')]}"/>
                        <field name="resale_type" widget="radio" options="{'horizontal': true}" attrs="{'invisible':[('sale_type','=','sale')], 'required':[('sale_type','=','resale')], 'readonly': [('state', '!=', 'new')]}"/>
                    </group>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Title"/>
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
    
                    <group col="4" string="Unit Information">
                        <field name="unit_id" options="{'no_create_edit': True, 'no_create': True}" attrs="{'readonly': [('state', '!=', 'new')]}"/>
                        <field name="owner_id" readonly="1"/>
                        <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}" /> 
                        <field name="real_estate_id" string="Real Estate"/>
                        <field name="property_type"/>
                        <!-- domain="[('state','=','re_sold')]" -->
                        <field name="date" required="1" attrs="{'readonly': [('state', '!=', 'new')]}"/>
                    </group>

                    <group col="4" string="Accounting Information" attrs="{'invisible':[('sale_type','!=','resale')]}">
                        <field name="journal_id" options="{'no_create_edit': True, 'no_create': True}" attrs="{'readonly': [('state', '!=', 'new')]}"/>
                        <field name="account_id" options="{'no_create_edit': True, 'no_create': True}" attrs="{'readonly': [('state', '!=', 'new')]}"/>
                        <field name="analytic_account_id" options="{'no_create_edit': True, 'no_create': True}" attrs="{'readonly': [('state', '!=', 'new')]}"/>
                        <field name="exchange_type_id" options="{'no_create_edit': True, 'no_create': True}" invisible="1"/>
                        <field name="move_id" attrs="{'invisible':[('state','=','draft')]}" readonly="1"/>
                        <field name="buyer_move_id" attrs="{'invisible':[('state','=','draft')]}" readonly="1"/>
                        <field name="currency_id" invisible="1"/>
                    </group>

                    <group col="4" string="Sales Information" attrs="{'invisible':[('sale_type','=','resale')]}">
                        <field name="partner_id" options="{'no_create_edit': True, 'no_create': True}" attrs="{'readonly': [('state', '!=', 'new')]}"/>
                        <field name="customer_type" attrs="{'invisible':[('property_type','=','ready')]}"/>
                        <!-- 'required':[('property_type','!=','ready')], -->
                        <field name="sales_user_id" options="{'no_create_edit': True, 'no_create': True}" attrs="{'readonly': [('state', '!=', 'new')]}"/>
                        <field name="marketing_user_id" options="{'no_create_edit': True, 'no_create': True}" attrs="{'readonly': [('state', '!=', 'new')]}"/>
                        <field name="evacuation_date"/>
                        <field name="real_notify_date"/>
                        <field name="delivery_date"/>
                        <field name="delivery_period" />
                    </group>
                    <group col="4" attrs="{'invisible':[('sale_type','=','resale')]}">
                        <!--field name="total_amount"  widget="monetary" options="{'currency_field': 'currency_id'}" /--> 
                        
                        <field name="property_commission" invisible="0"/>
                        <field name="commission"/>
                        <field name="invoice_ids" invisible="1"/>
                        <field name="payment_ids" invisible="1"/>
                        <field name="currency_id" invisible="0"/>
                        <field name="paid_amount"  widget="monetary" options="{'currency_field': 'currency_id'}" />
                        <field name="residual_amount"  widget="monetary" options="{'currency_field': 'currency_id'}" />
                        <!-- <field name="monthly_rental" attrs="{'invisible': [('sale_type', '!=','rent')],'required': [('sale_type', '=','rent')],'readonly':[('state','!=','draft')]}"/> -->
                        <!-- attrs="{'required':[('property_type','!=','ready')],'invisible':[('property_type','=','ready')]}"  widget="monetary" options="{'currency_field': 'currency_id'}" -->
                    </group>

                    <group col="4" string="Resale Information" attrs="{'invisible':[('sale_type','=','sale')]}">
                        <field name="buyer_id" options="{'no_create_edit': True, 'no_create': True}" attrs="{'invisible':[('sale_type','=','sale')], 'required':[('sale_type','!=','sale')], 'readonly': [('state', '!=', 'new')]}"/>
                        <field name="marketing_am" attrs="{'invisible':[('resale_type','=','with_d')], 'required':[('resale_type','!=','with_d')], 'readonly': [('state', '!=', 'new')]}"/>
                        <field name="owner_am" attrs="{'invisible':[('resale_type','=','with_d')], 'required':[('resale_type','!=','with_d')], 'readonly': [('state', '!=', 'new')]}"/>
                        <field name="total_am" attrs="{'invisible':[('resale_type','=','with_d')]}"/>
                    </group>

                    <group col="4" string="Delegate Information" attrs="{'invisible': ['|', ('sale_type','=','sale'), ('resale_type','=','without_d')]}">
                        <field name="delegate_name" options="{'no_create_edit': True, 'no_create': True}" attrs="{'invisible':[('resale_type','=','without_d')], 'required':[('resale_type','!=','without_d')], 'readonly': [('state', '!=', 'new')]}"/>
                        <field name="delegate_partner_id" attrs="{'invisible':[('resale_type','=','without_d')], 'required':[('resale_type','!=','without_d')]}"/>
                        <field name="delegate_contract_id" attrs="{'invisible':[('resale_type','=','without_d')], 'required':[('resale_type','!=','without_d')]}"/>
                        <field name="marketing_amount" attrs="{'invisible':[('resale_type','=','without_d')]}"/>
                        <field name="owner_amount" attrs="{'invisible':[('resale_type','=','without_d')]}"/>
                        <field name="total_amount" attrs="{'invisible':[('resale_type','=','without_d')]}"/>
                    </group>
                       
                    <notebook attrs="{'invisible':[('sale_type','=','resale')]}">
                        <page string="Commissions">
                            <field name="commission_lines" >
                                <tree editable="top">
                                    <field name="partner_id" attrs="{'readonly': [('check', '=', True)]}" options="{'no_create':True,'no_edit':True,'no_open':True}"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="amount" attrs="{'readonly': [('check', '=', True)]}"/>
                                    <field name="account_id" attrs="{'readonly': [('check', '=', True)]}" />
                                    <field name="journal_id" attrs="{'readonly': [('check', '=', True)]}" options="{'no_create':True,'no_edit':True,'no_open':True}"/>
                                    <field name="exchange_type_id" attrs="{'readonly': [('check', '=', True)]}" options="{'no_create':True,'no_edit':True,'no_open':True}"/>
                                    <button name="create_payment" type="object" string="Create Payment" class="oe_highlight" attrs="{'invisible': [('check', '=', True)]}"/>
                                    <field name="check" />
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="commission" class="oe_subtotal_footer_separator" />
                            </group>
                        </page>
                    </notebook>
                   
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
              
            </form>
        </field>
    </record>

     <record id="real_estate_sale_view_tree" model="ir.ui.view">
        <field name="name">real_estate_sale.tree</field>
        <field name="model">real.estate.sale</field>
        <field name="arch" type="xml">
            <tree string="maintenance Request" multi_edit="1" >
                <field name="name"/>
                <field name="real_estate_id"/>
                <field name="unit_id"/>
                <field name="date" />
                <field name="partner_id" />
                <field name="sales_user_id" />
                <field name="state"/>
               
            </tree>
        </field>
    </record>


    

    <record model="ir.actions.act_window" id="real_estate_sale_act_window">
        <field name="name">Real Estate sale</field>
        <field name="res_model">real.estate.sale</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('resale','=',False)]</field>
    </record>

    <record model="ir.actions.act_window" id="real_estate_resale_act_window">
        <field name="name">Real Estate re-sale</field>
        <field name="res_model">real.estate.sale</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('resale','=',True)]</field>
        <field name="context">{'default_resale':True}</field>
    </record>



   
    <menuitem id="menu_real_estate_sale" parent="real_estate.menu_base_real_estate" action="real_estate_sale_act_window" sequence="5" />


    <menuitem id="menu_real_estate_resale" parent="real_estate.menu_base_real_estate" action="real_estate_resale_act_window" sequence="5" />

    
</odoo>
