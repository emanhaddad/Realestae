<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="edit_holiday_status_form" model="ir.ui.view">
            <field name="name">hr.leave.type.view.form</field>
            <field name="model">hr.leave.type</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="before">
                    <field name="is_annual_leave"/>
                </xpath> 
                <xpath expr="//field[@name='request_unit']" position="after">
                    <field name="buy_leave"/>
                </xpath>    
                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <page name="buy_leave" string="Buy Leave" attrs="{'invisible':[('buy_leave','!=', True)]}">
                    	    <field name="rule_ids" attrs="{'required':[('buy_leave','=', True)],'invisible':[('buy_leave','!=', True)]}"/>
                        </page>
                    </notebook>
                </xpath> 
            </field>
        </record>
    </data>
</odoo>
