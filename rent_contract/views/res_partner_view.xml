<odoo>
	<data>


    <!-- Res Partner -->

    <!-- Res Partner Inherit Form View For Tenant-->
    <record id="tenant_res_partner_form_view" model="ir.ui.view">
        <field name="name">Tenant Partner</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <sheet> 
                    <div>
                         <h1>
                        <group>
                        <field name='renter_code' readonly="1"/> 
                        </group>
                         </h1>
                    </div>
                    <group col="2">
                      <field name='company_type' required="1" widget="radio"/>
                        <field name='name' required="1"/>
                        <field name='code' invisible="1" required="0"/>
                      </group>
                        <group col="4" colspan="2">
                             <field name='partner_type' invisible="0"/> 
                            <field name='unit_id'  invisible='1'/>
                            <field name='unit_name' invisible='1'/>
                            <field name='unit_no' invisible='1'/>
                        </group>
                            <group col="4" colspan="2" string="Personal Info" attrs="{'invisible': [('company_type','!=', 'person')]}">
                                <field name='date_birth' placeholder="التاريخ الميلاي"/>
                                <field name='partner_gender' widget='radio' options="{'horizontal': True}"/>
                                <field name='partner_sate' attrs="{'invisible': [('partner_type','=', 'owner')]}"/>
                                <field name='religion' attrs="{'invisible': [('partner_type','=', 'owner')]}"/>
                                <field name='chlidren_no' attrs="{'invisible': [('partner_type','=', 'owner')]}" />
                               
                                <field name='country_nath' attrs="{'invisible': [('partner_type','=', 'owner')]}"/>
                                 <field name='more_children_no' attrs="{'invisible': [('chlidren_no','!=', 'more_than')],'required':[('chlidren_no','=','more_than')]}"/>
                            </group>
                            <group col="4" colspan="2" string="Citizenship and Other Information">
                                <field name='identity_type' required="1" attrs="{'invisible': [('partner_type','=', 'owner')]}"/>
                                <field name='identiti_no' attrs="{'invisible': [('partner_type','=', 'owner')]}" required="1"/>
                                <field name='id_source_location' attrs="{'invisible': [('partner_type','=', 'owner')]}" widget='selection'/>

                                <field name='date_release' attrs="{'invisible': [('partner_type','=', 'owner')]}" placeholder="التاريخ الميلاي"/>
                                <field name='date_end' attrs="{'invisible': [('partner_type','=', 'owner')]}" placeholder="التاريخ الميلاي"/>
                                <field name='passport_no' attrs="{'invisible': [('partner_type','=', 'owner')]}"/>
                                <field name='account_code' attrs="{'invisible': [('partner_type','=', 'owner')]}"/>
                            </group>
                        <group col="2" colspan="2" string="Contact Information">
                            <group col="3" colspan="1">
                                    <field name="work_phone"/>
                                     <i class="fa fa-mobile"/>
                            </group>
                            <group col="3" colspan="1">
                                   <field name='mobile_phone' />
                                    <i class="fa fa-mobile"/>
                            </group>
                            <group col="2">
                                <field name='address_new' />
                                <field name='work_location'/>
                                <field name='fax_code' />
                                <field name='work_email'/>
                              </group>
                            </group>
                        <group col="4" colspan="2">
                            <field name='black_list'/>
                            <field name='reason' attrs="{'invisible': [('black_list','=', False)], 'required': [('black_list','=', True)]}"/>
                            <field name='a' invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Contacts">

                            <field name='contacts'/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

       
        

        <!-- Res Partner Inherit Form View For Owner-->
        <record id="owners_res_partner_form_view" model="ir.ui.view">
            <field name="name">Owners Partner</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name='partner_type' invisible="1"/>
                    <group col="2">
                      <field name='company_type' required="1" widget="radio"/>
                        <field name='name' required="1"/>
                        <field name='code' required="1"/>
                    </group>
                            <group col="4" colspan="2" string="Personal Info" attrs="{'invisible': [('company_type','!=', 'person')]}">
                                <field name='date_birth' placeholder="التاريخ الميلاي"/>
                                <field name='partner_gender' widget='radio' options="{'horizontal': True}"/>
                            </group>
                    <group col="4" colspan="2" string="Contact Information">
                        <label for="national_address" string="Address"/>
                        <div class="o_address_format">
                            <field name="pro_block_no" placeholder="Block No" class="o_address_street" required="1"/>
                            <field name="pro_street_name" placeholder="Street Name" class="o_address_street" required="1"/>
                            <field name="hai_id" placeholder="Hai" class="o_address_city" required="1"/>
                            <field name="pro_city_name" class="o_address_state" placeholder="City Name" required="1" />
                            <field name="mail_code" placeholder="Mail Code" required="1" />
                            <field name="extension_num" placeholder="extension number" required="1"/>                     
                        </div>
                        <field name='phone' required="1"/>
                        <field name='email'/>
                        <field name='national_address' readonly="1"/>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Res Partner Inherit Tree View For Owner-->
        <record id="rowners_partner_tree_view" model="ir.ui.view">
                <field name="name">Owner partner</field>
                <field name="model">res.partner</field>
                <field name="arch" type="xml">
                    <tree>
                        <field name="name"/>
                        <field name="company_type"/>
                    </tree>
                </field>
            </record>

        <!-- Res Partner Actions For Owner-->
        <record model="ir.actions.act_window" id="action_res_pat_owner">
            <field name="name">Owner</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_partner_type': 'owner'}</field>
            <field name="domain">[('partner_type','=','owner')]</field>
        </record>

        <record id="action_owner_partner_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="rowners_partner_tree_view" />
            <field name="act_window_id" ref="action_res_pat_owner" />
        </record>
        <record id="action_owner_partner_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="owners_res_partner_form_view" />
            <field name="act_window_id" ref="action_res_pat_owner" />
        </record>

