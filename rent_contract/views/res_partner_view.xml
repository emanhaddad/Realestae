                    <field name="hai_id" placeholder="Hai" class="o_address_city" required="1"/>
                    <field name="pro_city_name" class="o_address_state" placeholder="City Name" required="1" />
                    <field name="mail_code" placeholder="Mail Code" required="1" />
                    <field name="extension_num" placeholder="extension number" required="1"/>                     
                </div>
                            <field name='phone' required="1"/>
                            <field name='email'/>
