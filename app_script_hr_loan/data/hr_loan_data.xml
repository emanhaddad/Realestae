<odoo>

    <record id="loan_structure_type" model="hr.payroll.structure.type">
        <field name="name">Employee Loan Structure </field>
        <field name="country_id" eval="False"/>
    </record>

    <record id="loan_structure_info" model="hr.payroll.structure">
            <field name="name">Loan Structure</field>
            <field name="type_id" ref="app_script_hr_loan.loan_structure_type"/>
            <!-- <field name="unpaid_work_entry_type_ids" eval="[(4, ref('hr_work_entry_contract.work_entry_type_unpaid_leave'))]"/> -->
            <field name="country_id" eval="False"/>
        </record>
    <record id="hr_salary_rule_for_loan_installment" model="hr.salary.rule">
        <field name="amount_select">code</field>
        <field name="code">IN_DED</field>
        <field name="category_id" ref="hr_payroll.DED"/>
        <field name="name">Installment Ded</field>
        <field name="sequence" eval="5"/>
        <field name="amount_python_compute">
if payslip.loans_arc_ids:
    installment_amount = 0.0
    for inst in payslip.loans_arc_ids:
        installment_amount += inst.amount
    result = -1 * (installment_amount)
else:
    result = 0.0
        </field>
        <field name="struct_id" ref="app_script_hr_loan.loan_structure_info"/>
     </record>
</odoo>