<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="restructure_loan_form" model="ir.ui.view">
            <field name="name">restructure.loan.wiz</field>
            <field name="model">restructure.loan.wiz</field>
            <field name="arch" type="xml">
                <form string="Restructuring Loan">
                    <group>
                        <group>
                            <field name="loan_id"/>
                            <field name="partial_amount_paid"/>
                            <field name="installment"/>
                            <field name="installment_amount" readonly="1" force_save="1"/>
                        </group>

                        <group>
                            <field name="remain_amount"/>
                            <field name="payment_date"/>
                            <field name="journal_id" attrs="{'required': [('partial_amount_paid', '>', 0.0)], 'invisible': [('partial_amount_paid', '=', 0.0)]}"/>
                            <field name="dircet_payment_date" attrs="{'required': [('partial_amount_paid', '>', 0.0)], 'invisible': [('partial_amount_paid', '=', 0.0)]}"/>
                        </group>
                    </group>
                    <footer>
                   		<button name="restructure" string="Restructure" type="object" default_focus="1" class="oe_highlight"/>
                  		or
                  		<button string="Cancel" class="oe_link" special="cancel"/>
                	</footer>
                </form>
            </field>
        </record>


        <record id="action_restructure_loan" model="ir.actions.act_window">
            <field name="name">Restructuring Loan</field>
            <field name="res_model">restructure.loan.wiz</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
       
    </data>
</odoo>

