<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_view" model="ir.ui.view">
        <field name="name">hr.employee.view.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[4]" position="after">
                    <page string="Violations">
                        <field name="emp_violation_ids">
                            <tree>
                                <field name="violation_date"/>
                                <field name="violation_id"/>
                                <field name="time"/>
                                <field name="punishment_ids" widget="many2many_tags"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    
</odoo>
